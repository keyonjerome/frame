-v $HOME/.ssh:/home/admin/.ssh:ro
-v $HOME/.gitconfig:/home/admin/.gitconfig:ro
-v /dev/bus/usb:/dev/bus/usb 
--device /dev/bus/usb:/dev/bus/usb
--device=/dev/video4
--device=/dev/video5
--device=/dev/media2
-v /run/udev:/run/udev:ro
--group-add $(getent group plugdev | cut -d: -f3)

# add gpio pwm
--group-add $(getent group gpio | cut -d: -f3)

# optional but fine
-v /sys/class/pwm:/sys/class/pwm:rw
-v /sys/devices:/sys/devices:ro
-v /sys/kernel/debug:/sys/kernel/debug:ro